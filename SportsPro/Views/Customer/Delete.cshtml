@model Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>
<p>Are you sure you want to delete @Model.FirstName @Model.LastName?</p>

<form asp-controller="Customer" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.CustomerID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Customer" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>

