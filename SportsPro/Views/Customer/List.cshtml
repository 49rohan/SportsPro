@model List<Customer>

@{
    ViewData["Title"] = "Customer Manager - Sports Pro";
}


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName @customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.City</td>
                <td>
                    <form asp-controller="Customer" asp-action="AddEdit" method="get" style="display: inline;">
                        <input type="hidden" name="id" value="@customer.CustomerID" />
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </td>
                <td>
                    <a asp-controller="Customer" asp-action="Delete" 
                    asp-route-id="@customer.CustomerID" 
                    class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mb-3">
    <a asp-controller="Customer" asp-action="AddEdit" class="btn btn-primary">Add Customer</a>
</div>
