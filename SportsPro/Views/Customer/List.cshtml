@model Customer
@{
    ViewBag.Title = "Customer Registrations";
}

<h2>Registrations for @Model.FirstName @Model.LastName</h2>

@if (Model.Registrations?.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Release Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reg in Model.Registrations)
            {
                <tr>
                    <td>@reg.Product.Name</td>
                    <td>@reg.Product.YearlyPrice.ToString("c")</td>
                    <td>@reg.Product.ReleaseDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products are registered for this customer.</p>
}

<form asp-action="Register" method="post" class="mt-3">
    <input type="hidden" name="CustomerID" value="@Model.CustomerID" />

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Product:</label>
            <select name="ProductID" class="form-control">
                <option value="0">Select a product...</option>
                @foreach (Product p in ViewBag.Products)
                {
                    <option value="@p.ProductID">@p.Name</option>
                }
            </select>
        </div>
        <div class="form-group col-md-6 align-self-end">
            <button type="submit" class="btn btn-primary">Register Product</button>
        </div>
    </div>
</form>

@if (TempData["message"] != null)
{
    <div class="alert alert-info mt-3">@TempData["message"]</div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Select Different Customer</a>
</div>