@model SportsPro.Models.ViewModels.IncidentManagerViewModel

@{
    ViewData["Title"] = "Incident Manager";
}

<h1>@ViewBag.Title</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "all" ? "active" : "")" asp-action="List" asp-route-filter="all">All Incidents</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "unassigned" ? "active" : "")" asp-action="List" asp-route-filter="unassigned">Unassigned Incidents</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(ViewBag.Filter == "open" ? "active" : "")" asp-action="List" asp-route-filter="open">Open Incidents</a>
    </li>
</ul>

<div class="row">
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Date Opened</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var incident in Model.Incidents)
                {
                    <tr>
                        <td>@incident.Title</td>
                        <td>@incident.Customer.FullName</td>
                        <td>@incident.Product.Name</td>
                        <td>@incident.DateOpened.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@incident.IncidentID" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@incident.IncidentID" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Incident" asp-action="Add" class="btn btn-primary">Add Incident</a>
    </div>
</div>