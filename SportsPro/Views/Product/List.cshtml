@model List<Product>
@{
    ViewData["Title"] = "Product Manager - Sports Pro";
}

<h2>Product Manager</h2>

<table class="table table-bordered table-stripped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@product.YearlyPrice</td>
                <td>@product.ReleaseDate</td>
                <td>
                    <a asp-controller="Product" asp-action="AddEdit" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Product" asp-action="AddEdit" class="btn btn-primary">Add Product</a>
@{
}