@model SportsPro.Models.Technician

@{
    ViewData["Title"] = "Delete Technician";
}

<h1>Delete Technician</h1>

<div>
    <h4>Are you sure you want to delete this technician?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TechnicianID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="List" class="btn btn-secondary">Back to List</a>
    </form>
</div>